<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="i2f.liteflow.mapper.LiteFlowDagMapper">
    <!--
    * @author Ice2Faith
    * @date 2023-06-07 14:23:55
    * @desc lite_flow_dag 流程有向图表
    -->

    <resultMap id="mapDoResultMap" type="i2f.liteflow.data.dom.LiteFlowDagDo">
        <id property="id" column="id"/>
        <result property="processId" column="process_id"/>
        <result property="beginNodePkey" column="begin_node_pkey"/>
        <result property="endNodePkey" column="end_node_pkey"/>
        <result property="flowCondition" column="flow_condition"/>
    </resultMap>

    <resultMap id="mapVoResultMap" type="i2f.liteflow.data.vo.LiteFlowDagVo"
               extends="mapDoResultMap">
    </resultMap>

    <sql id="columnsAsCamel">
         a.id
         ,a.process_id as processId
         ,a.begin_node_pkey as beginNodePkey
         ,a.end_node_pkey as endNodePkey
         ,a.flow_condition as flowCondition
    </sql>

    <sql id="columnDescAsCamel">
    </sql>

    <sql id="baseQueryBody">
        select
              a.id
              ,a.process_id
              ,a.begin_node_pkey
              ,a.end_node_pkey
              ,a.flow_condition
        from lite_flow_dag a
    </sql>

    <sql id="baseQuery">
        <include refid="baseQueryBody"></include>
        <where>
            <if test="post.id!=null">
                and a.id = #{post.id}
            </if>
            <if test="post.processId!=null">
                and a.process_id = #{post.processId}
            </if>
            <if test="post.beginNodePkey!=null and post.beginNodePkey!=''">
                and instr(a.begin_node_pkey,#{post.beginNodePkey}) &gt; 0
            </if>
            <if test="post.endNodePkey!=null and post.endNodePkey!=''">
                and instr(a.end_node_pkey,#{post.endNodePkey}) &gt; 0
            </if>
            <if test="post.flowCondition!=null and post.flowCondition!=''">
                and instr(a.flow_condition,#{post.flowCondition}) &gt; 0
            </if>
        </where>
    </sql>

    <select id="list" resultMap="mapVoResultMap">
        <include refid="baseQuery"></include>
    </select>

    <select id="findByPk" resultMap="mapVoResultMap">
        <include refid="baseQueryBody"></include>
        where a.id = #{id}
    </select>

    <select id="findByProcessId"  resultMap="mapVoResultMap">
        <include refid="baseQueryBody"></include>
        where a.process_id = #{processId}
    </select>

    <insert id="insertSelective">
        insert into lite_flow_dag
        (
        <trim suffixOverrides="," prefixOverrides=",">
            <if test="post.id!=null">
                id,
            </if>
            <if test="post.processId!=null">
                process_id,
            </if>
            <if test="post.beginNodePkey!=null and post.beginNodePkey!=''">
                begin_node_pkey,
            </if>
            <if test="post.endNodePkey!=null and post.endNodePkey!=''">
                end_node_pkey,
            </if>
            <if test="post.flowCondition!=null and post.flowCondition!=''">
                flow_condition,
            </if>
        </trim>
        )
        values
        (
        <trim suffixOverrides="," prefixOverrides=",">
            <if test="post.id!=null">
                #{post.id},
            </if>
            <if test="post.processId!=null">
                #{post.processId},
            </if>
            <if test="post.beginNodePkey!=null and post.beginNodePkey!=''">
                #{post.beginNodePkey},
            </if>
            <if test="post.endNodePkey!=null and post.endNodePkey!=''">
                #{post.endNodePkey},
            </if>
            <if test="post.flowCondition!=null and post.flowCondition!=''">
                #{post.flowCondition},
            </if>
        </trim>
        )
    </insert>

    <update id="updateSelectiveByPk">
        update lite_flow_dag
        <set>
            <if test="post.id!=null">
                id = #{post.id},
            </if>
            <if test="post.processId!=null">
                process_id = #{post.processId},
            </if>
            <if test="post.beginNodePkey!=null and post.beginNodePkey!=''">
                begin_node_pkey = #{post.beginNodePkey},
            </if>
            <if test="post.endNodePkey!=null and post.endNodePkey!=''">
                end_node_pkey = #{post.endNodePkey},
            </if>
            <if test="post.flowCondition!=null and post.flowCondition!=''">
                flow_condition = #{post.flowCondition},
            </if>
        </set>
        where id = #{post.id}
    </update>

    <delete id="deleteByPk">
        delete from lite_flow_dag
        where id = #{id}
    </delete>

    <insert id="insert">
        insert into lite_flow_dag
        (
             id
             ,process_id
             ,begin_node_pkey
             ,end_node_pkey
             ,flow_condition
        )
        values
        (
              #{post.id}
             ,#{post.processId}
             ,#{post.beginNodePkey}
             ,#{post.endNodePkey}
             ,#{post.flowCondition}
        )
    </insert>

    <update id="updateByPk">
        update lite_flow_dag
        <set>
            id = #{post.id},
            process_id = #{post.processId},
            begin_node_pkey = #{post.beginNodePkey},
            end_node_pkey = #{post.endNodePkey},
            flow_condition = #{post.flowCondition},
        </set>
        where id = #{post.id}
    </update>

    <delete id="deleteSelective">
        delete from lite_flow_dag
        where
        <trim suffixOverrides="and|or" prefixOverrides="and|or">
            <if test="post.id!=null">
                and id = #{post.id}
            </if>
            <if test="post.processId!=null">
                and process_id = #{post.processId}
            </if>
            <if test="post.beginNodePkey!=null and post.beginNodePkey!=''">
                and instr(begin_node_pkey,#{post.beginNodePkey}) &gt; 0
            </if>
            <if test="post.endNodePkey!=null and post.endNodePkey!=''">
                and instr(end_node_pkey,#{post.endNodePkey}) &gt; 0
            </if>
            <if test="post.flowCondition!=null and post.flowCondition!=''">
                and instr(flow_condition,#{post.flowCondition}) &gt; 0
            </if>
        </trim>
    </delete>

    <insert id="insertBatch">
        insert into lite_flow_dag
        (
        id
        ,process_id
        ,begin_node_pkey
        ,end_node_pkey
        ,flow_condition
        )
        values
        <foreach collection="list" item="item" separator=",">
            (
            #{item.id}
            ,#{item.processId}
            ,#{item.beginNodePkey}
            ,#{item.endNodePkey}
            ,#{item.flowCondition}
            )
        </foreach>

    </insert>
    <delete id="deleteHistoryVersions">
        delete from lite_flow_dag
        where process_id in (
            select id
            from lite_flow_process
            where active=0
            and pkey=#{pkey}
        )
    </delete>
</mapper>